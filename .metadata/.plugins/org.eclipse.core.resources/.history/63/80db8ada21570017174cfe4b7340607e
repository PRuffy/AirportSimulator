/** 
 * 
 */
package framework.environment

import java.util.ArrayList
import framework.math.Point2f
import framework.math.Rectangle2f


/** 
 * @author stay
 * 
 */
class GraphNode {
	var leavingEdges : ArrayList<GraphEdge>
	var surface : Rectangle2f
	var staticObject : ArrayList<Wall>
	var agentObject : ArrayList<AgentBody>
	var id : String
	var name : String
	
	new (){
		id = null
		staticObject = new ArrayList()
		surface = null
		leavingEdges = new ArrayList()
		name = null
	}
	
	def addAgent(^agent : AgentBody){
		agentObject.add(^agent)
	}
	
	def removeAgent(^agent : AgentBody){
		ajentObject.remove(^agent)
	}
	
	def setId(id: String){
		this.id = id
	}
	
	def setName(name : String){
		this.name = name
	}
	
	def defineSurface(p1: Point2f, p2: Point2f){
		surface =  new Rectangle2f(p1, p2)
	}
	
	def getId (): String{
		id
	}
	
	def addLeavingEdge(e : GraphEdge){
		leavingEdges.add(e)
	}
	
	def addWall(w:Wall){
		staticObject.add(w)
	}
}
